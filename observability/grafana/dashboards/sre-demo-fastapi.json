{
  "title": "SRE Demo - FastAPI",
  "uid": "sre-demo-fastapi",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "RPS (Requests/sec)",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"sre-demo\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Success Rate (%)",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "100 * sum(rate(http_requests_total{job=\"sre-demo\",status!~\"5..\"}[1m])) / sum(rate(http_requests_total{job=\"sre-demo\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "5xx Error Rate",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"sre-demo\",status=~\"5..\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Latency (Average)",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_sum{job=\"sre-demo\"}[5m])) / sum(rate(http_request_duration_seconds_count{job=\"sre-demo\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Latency p95",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"sre-demo\"}[5m])) by (le))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Latency p99",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"sre-demo\"}[5m])) by (le))",
          "refId": "A"
        }
      ]
    }
  ]
}

